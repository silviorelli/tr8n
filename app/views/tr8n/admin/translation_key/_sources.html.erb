  <%= will_filter_scripts_tag %>

  <%= will_filter_table_tag(@results, :columns => [
    [:icn, image_tag("tr8n/icons/page_white_code.png"), :title => "", :style => "width:12px;"],
    :id,
    [:application, lambda{|source| 
      link_to(source.translation_source.application.name, :controller => "/tr8n/admin/applications", :action => :view, :id => source.translation_source.application.id)
    }],
    [:source, lambda{|source| 
      link_to(source.translation_source.source, :controller => "/tr8n/admin/sources", :action => :view, :id => source.translation_source.id)
    }],
    [:name, lambda{|source| 
      source.translation_source.name
    }],
    [:description, lambda{|source| 
      source.translation_source.description
    }],
    [:actions, lambda{|source|
      tr8n_actions_tag([
        link_to_function("Update", "Tr8n.UI.Lightbox.show('/tr8n/admin/sources/lb_update?id=#{source.translation_source.id}', {height:350})")
      ])
    }, 'padding:5px;text-align:right;white-space:nowrap;']
  ]) %>
